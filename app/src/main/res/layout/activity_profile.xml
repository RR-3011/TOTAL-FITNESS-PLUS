<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginModule.ProfileActivity"
    android:orientation="vertical"
    android:background="@drawable/bg_image"
    android:gravity="center">

    <TextView
        android:id="@+id/firstnameTv_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/bowlby_one_sc"
        android:text="first name"
        android:textColor="@color/main_color"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/lastnameTv_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/bowlby_one_sc"
        android:text="last name"
        android:textColor="@color/main_color"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/emailTv_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/bowlby_one_sc"
        android:text="email"
        android:textColor="@color/main_color"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/totalSteps_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/bowlby_one_sc"
        android:text="TextView"
        android:textColor="@color/main_color"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/totalCalories_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/bowlby_one_sc"
        android:text="TextView"
        android:textColor="@color/main_color"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/totalDistance_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/bowlby_one_sc"
        android:text="TextView"
        android:textColor="@color/main_color"
        android:textSize="24sp" />

    <Button
        android:id="@+id/logoutbtn_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/bowlby_one_sc"
        android:text="LOGOUT"
        android:background="@color/black"
        android:padding="10dp"
        android:textColor="@color/main_color"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/clearStats_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/bowlby_one_sc"
        android:text="Clear Stats "
        android:background="@color/black"
        android:padding="10dp"
        android:textColor="@color/main_color"
        android:textSize="24sp"
        android:textStyle="bold" />



</LinearLayout>